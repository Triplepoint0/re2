
<div class="row" style="width:100%;">

<section class="top-m2"style="width:50%; height:455px; padding-right:10px;">
<section style="width:50%; border:solid black 2px; float:right; border-radius: 15px 50px; background-image: linear-gradient(to right, #72A82B 0%, #A7FA65 100%); box-shadow: 5px 5px 3px grey; color:white; padding: 5px 5px 5px 20px; text-shadow: 2px 3px 0px black;">

<div class="authform" style="margin-left:10px;">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus => true, class: 'form-control2' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :autofocus => true, class: 'form-control2' %>
    </div>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, :autofocus => true, class: 'form-control2' %>
    </div>
      <%= f.hidden_field :picture, value: "http://www.upplanet.com/bighero/outlay-demo/img/customer_avatar.png" %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control2' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control2' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control2' %>
    </div>
     <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
  </section>
</section>


<section class ="top-m2"style="width:50%; height:455px;">
<section style="width:50%; border:solid black 2px; height:255px; border-radius: 15px 50px; color:white; background-image: linear-gradient(to right, #72A82B 0%, #A7FA65 100%); box-shadow: 5px 5px 3px grey; padding: 5px 5px 5px 15px; text-shadow: 2px 3px 0px black;">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<h3>Log in</h3>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</section>
</section>


</div>

